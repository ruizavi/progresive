{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": false,
    "allowJs": false,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "src"
  },
  "include": ["src/**/*", "package.json", "README.md"],
  "exclude": ["node_modules"]
}
